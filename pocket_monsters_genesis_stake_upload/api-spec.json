{
  "integrationId": "pocket_monsters_genesis_api_integration",
  "gameId": "pocket_monsters_genesis",
  "version": "1.0.0",
  "integrationType": "stake_com_api_compatible",
  "creationDate": "2025-09-27T23:38:00Z",
  "apiSpecification": {
    "version": "v2",
    "baseUrl": "https://api.stake.com/v2/games/pocket_monsters_genesis",
    "websocketUrl": "wss://ws.stake.com/pocket_monsters_genesis",
    "supportedMethods": [
      "GET",
      "POST",
      "PUT",
      "DELETE",
      "WEBSOCKET"
    ],
    "authentication": {
      "method": "bearer_token",
      "tokenExpiry": 3600,
      "refreshEnabled": true,
      "scopes": [
        "game:play",
        "game:balance",
        "game:history",
        "game:config"
      ]
    }
 },
  "endpoints": {
    "game": {
      "spin": {
        "method": "POST",
        "path": "/spin",
        "description": "Execute a game spin with specified bet amount",
        "requestSchema": {
          "type": "object",
          "properties": {
            "bet": {"type": "number", "minimum": 0.01, "maximum": 100.00},
            "currency": {"type": "string", "enum": ["USD", "BTC", "ETH", "DOGE", "LTC"]},
            "seed": {"type": "string", "maxLength": 64},
            "bonusMode": {"type": "string", "enum": ["base", "frenzy", "hunt", "epic"]},
            "sessionId": {"type": "string", "maxLength": 128}
          },
          "required": ["bet", "currency", "sessionId"]
        },
        "responseSchema": {
          "type": "object",
          "properties": {
            "success": {"type": "boolean"},
            "gameId": {"type": "string"},
            "sessionId": {"type": "string"},
            "roundId": {"type": "string"},
            "result": {
              "type": "object",
              "properties": {
                "totalWin": {"type": "number"},
                "currency": {"type": "string"},
                "grid": {"type": "array", "items": {"type": "array", "items": {"type": "string"}}},
                "multipliers": {"type": "array", "items": {"type": "array", "items": {"type": "number"}}},
                "bonusTriggered": {"type": "boolean"},
                "bonusType": {"type": "string"},
                "freeSpinsAwarded": {"type": "number"},
                "visualEffects": {
                  "type": "object",
                  "properties": {
                    "cascadeCount": {"type": "number"},
                    "specialEffects": {"type": "array", "items": {"type": "string"}},
                    "animationDuration": {"type": "number"}
                  }
                }
              }
            },
            "balance": {
              "type": "object",
              "properties": {
                "before": {"type": "number"},
                "after": {"type": "number"}
              }
            },
            "gameHistory": {
              "type": "object",
              "properties": {
                "roundId": {"type": "string"},
                "timestamp": {"type": "number"},
                "verificationHash": {"type": "string"}
              }
            },
            "error": {
              "type": "object",
              "properties": {
                "code": {"type": "string"},
                "message": {"type": "string"}
              }
            }
          }
        }
      },
      "config": {
        "method": "GET",
        "path": "/config",
        "description": "Get game configuration and settings",
        "responseSchema": {
          "type": "object",
          "properties": {
            "gameId": {"type": "string"},
            "name": {"type": "string"},
            "provider": {"type": "string"},
            "version": {"type": "string"},
            "rtp": {
              "type": "object",
              "properties": {
                "base": {"type": "number"},
                "bonus": {"type": "number"}
              }
            },
            "betLimits": {
              "type": "object",
              "properties": {
                "min": {"type": "number"},
                "max": {"type": "number"},
                "maxWin": {"type": "number"}
              }
            },
            "features": {"type": "array", "items": {"type": "string"}},
            "grid": {
              "type": "object",
              "properties": {
                "rows": {"type": "number"},
                "cols": {"type": "number"}
              }
            },
            "paylines": {"type": "string"},
            "volatility": {"type": "string"},
            "theme": {"type": "string"},
            "technology": {"type": "string"}
          }
        }
      },
      "balance": {
        "method": "GET",
        "path": "/balance",
        "description": "Get player balance information",
        "requestSchema": {
          "type": "object",
          "properties": {
            "sessionId": {"type": "string", "maxLength": 128},
            "currency": {"type": "string", "enum": ["USD", "BTC", "ETH", "DOGE", "LTC"]}
          },
          "required": ["sessionId", "currency"]
        },
        "responseSchema": {
          "type": "object",
          "properties": {
            "success": {"type": "boolean"},
            "balance": {"type": "number"},
            "currency": {"type": "string"},
            "sessionId": {"type": "string"},
            "timestamp": {"type": "number"}
          }
        }
      },
      "history": {
        "method": "GET",
        "path": "/history",
        "description": "Get game history for player",
        "requestSchema": {
          "type": "object",
          "properties": {
            "sessionId": {"type": "string", "maxLength": 128},
            "limit": {"type": "number", "minimum": 1, "maximum": 100},
            "offset": {"type": "number", "minimum": 0},
            "startDate": {"type": "string", "format": "date-time"},
            "endDate": {"type": "string", "format": "date-time"}
          },
          "required": ["sessionId"]
        },
        "responseSchema": {
          "type": "object",
          "properties": {
            "success": {"type": "boolean"},
            "history": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "roundId": {"type": "string"},
                  "timestamp": {"type": "number"},
                  "bet": {"type": "number"},
                  "win": {"type": "number"},
                  "grid": {"type": "array", "items": {"type": "array", "items": {"type": "string"}}},
                  "totalWin": {"type": "number"},
                  "bonusTriggered": {"type": "boolean"},
                  "verificationHash": {"type": "string"}
                }
              }
            },
            "total": {"type": "number"},
            "limit": {"type": "number"},
            "offset": {"type": "number"}
          }
        }
      }
    },
    "websocket": {
      "events": [
        {
          "name": "spin_result",
          "description": "Real-time spin result notification",
          "dataSchema": {
            "type": "object",
            "properties": {
              "roundId": {"type": "string"},
              "result": {"$ref": "#/endpoints/game/spin/responseSchema/properties/result"},
              "timestamp": {"type": "number"}
            }
          }
        },
        {
          "name": "balance_update",
          "description": "Real-time balance update notification",
          "dataSchema": {
            "type": "object",
            "properties": {
              "balance": {"type": "number"},
              "currency": {"type": "string"},
              "timestamp": {"type": "number"}
            }
          }
        },
        {
          "name": "bonus_trigger",
          "description": "Real-time bonus feature trigger notification",
          "dataSchema": {
            "type": "object",
            "properties": {
              "bonusType": {"type": "string"},
              "freeSpins": {"type": "number"},
              "multiplier": {"type": "number"},
              "timestamp": {"type": "number"}
            }
          }
        }
      ]
    }
  },
  "security": {
    "authentication": {
      "type": "oauth2_bearer",
      "tokenLifetime": 3600,
      "refreshWindow": 300,
      "tokenRotation": true
    },
    "rateLimiting": {
      "enabled": true,
      "requestsPerMinute": 100,
      "burstLimit": 10,
      "per": "ip_address_and_session"
    },
    "validation": {
      "inputSanitization": true,
      "schemaValidation": true,
      "sqlInjectionProtection": true,
      "xssProtection": true
    },
    "encryption": {
      "transport": "tls_1_3",
      "dataAtRest": "aes_256",
      "apiKeys": "encrypted_storage"
    }
  },
  "performance": {
    "caching": {
      "configEndpoint": {
        "ttl": 300,
        "enabled": true,
        "compression": true
      },
      "balanceEndpoint": {
        "ttl": 5,
        "enabled": true,
        "realTimeUpdates": true
      }
    },
    "responseTimes": {
      "spinEndpoint": "< 200ms",
      "configEndpoint": "< 50ms",
      "balanceEndpoint": "< 50ms",
      "historyEndpoint": "< 100ms"
    },
    "concurrency": {
      "maxConcurrentRequests": 1000,
      "connectionPooling": true,
      "databaseConnections": 50
    }
  },
 "errorHandling": {
    "httpStatusCodes": {
      "200": "Success",
      "400": "Bad Request - Invalid parameters",
      "401": "Unauthorized - Invalid token",
      "403": "Forbidden - Insufficient permissions",
      "404": "Not Found - Resource does not exist",
      "429": "Too Many Requests - Rate limit exceeded",
      "500": "Internal Server Error"
    },
    "errorMessages": {
      "INVALID_BET_AMOUNT": "Bet amount is outside allowed range",
      "INSUFFICIENT_BALANCE": "Player balance is insufficient for bet amount",
      "INVALID_SESSION": "Session ID is invalid or expired",
      "GAME_ERROR": "An error occurred during game execution",
      "RATE_LIMIT_EXCEEDED": "Rate limit exceeded, please try again later"
    }
  },
  "compliance": {
    "provablyFair": {
      "enabled": true,
      "verificationHash": true,
      "seedGeneration": "cryptographically_secure",
      "auditTrail": true
    },
    "regulatory": {
      "jurisdictionCompliance": "multi_jurisdiction",
      "ageVerification": "required",
      "responsibleGaming": "enabled",
      "transactionLogging": "detailed"
    }
 },
  "monitoring": {
    "healthCheck": {
      "endpoint": "/health",
      "interval": 30,
      "timeout": 5
    },
    "metrics": {
      "requestsPerSecond": true,
      "errorRates": true,
      "responseTimes": true,
      "activeConnections": true,
      "cacheHitRates": true
    },
    "logging": {
      "level": "info",
      "retention": "30d",
      "structuredLogging": true,
      "sensitiveDataMasking": true
    }
  },
  "integrationStatus": "ready_for_production",
  "stakeCompliance": "fully_compliant",
  "apiVersion": "v2_stake_compatible"
}