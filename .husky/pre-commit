#!/usr/bin/env sh
set -e
# Optional Husky shim (present when prepare runs)
if [ -f "$(dirname -- "$0")/_/husky.sh" ]; then
	. "$(dirname -- "$0")/_/husky.sh"
fi

# Format staged files
npx --no -- lint-staged

# Lint Markdown (scope to README only to keep noise low)
npx --no -- markdownlint README.md || true
