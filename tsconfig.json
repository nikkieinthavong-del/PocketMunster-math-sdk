{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "types": ["vitest/globals"],
    "baseUrl": ".",
    "paths": {
      "@engine/*": ["src/js/engine/*"],
      "@features/*": ["src/js/features/*"],
      "@ui/*": ["src/js/ui/*"]
    }
  },
  "include": ["src", "tests"]
}