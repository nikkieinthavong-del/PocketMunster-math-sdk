{
  "compilerOptions": {
    "target": "ES2022",
  "lib": ["ES2022", "DOM"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "types": ["node"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src/**/*.ts", "scripts/**/*.ts", "config.json"],
  "exclude": ["dist", "dist-run", "node_modules", "src/stories/**"]
}