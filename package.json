{
  "name": "pocketmon-genesis",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "build:demo": "tsc -p tsconfig.run.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "simulate": "npm run build:demo && node dist-run/scripts/simulate.js",
    "simulate:bonus": "npm run build:demo && node dist-run/scripts/simulate_bonus.js",
    "simulate:bonus:500k": "npm run build:demo && node dist-run/scripts/simulate_bonus.js --spins=500000",
    "simulate:bonus:1m": "npm run build:demo && node dist-run/scripts/simulate_bonus.js --spins=1000000",
    "calibrate:total": "npm run build:demo && node dist-run/scripts/calibrate_total.js --spins=200000 --targetRTP=0.95 --write"
  },
  "devDependencies": {
    "@types/node": "^20.19.13",
    "typescript": "^5.9.2",
    "vitest": "^2.0.5"
  },
  "engines": {
    "node": ">=20 <21"
  }
}
